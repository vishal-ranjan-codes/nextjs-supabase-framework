# ==============================================================================
# SUPABASE CONFIGURATION
# Get these from your Supabase Dashboard -> Settings -> API
# Note: "Anon Key" is now often referred to as "Publishable Key"
# ==============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_public_anon_key_here

# ==============================================================================
# SITE CONFIGURATION
# Used for authentication callbacks and redirects
# ==============================================================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ==============================================================================
# AUTHENTICATION FEATURE FLAGS
# Enable or disable specific authentication methods
# ==============================================================================
NEXT_PUBLIC_ENABLE_OAUTH=true
NEXT_PUBLIC_ENABLE_EMAIL=true
NEXT_PUBLIC_ENABLE_PHONE=false

# Display Order (comma-separated: oauth,email,phone)
NEXT_PUBLIC_AUTH_DISPLAY_ORDER=oauth,email,phone

# ==============================================================================
# VERIFICATION REQUIREMENTS
# Security settings for user verification
# ==============================================================================
# Require phone verification after signup (if phone auth is enabled)
NEXT_PUBLIC_REQUIRE_PHONE_VERIFICATION=true

# Require OTP for email verification (false = magic link only)
NEXT_PUBLIC_EMAIL_REQUIRE_OTP=true

# ==============================================================================
# DEVELOPMENT ONLY FLAGS
# Use these to save costs and speed up testing during local development
# ==============================================================================
# Skip sending real SMS/OTP in development (saves money)
NEXT_PUBLIC_SKIP_PHONE_OTP_IN_DEV=true

# Test mode - auto-verify all OTPs (useful for automated UI testing)
NEXT_PUBLIC_AUTH_TEST_MODE=false
